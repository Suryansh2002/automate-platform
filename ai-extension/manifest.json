{
  "manifest_version": 3,
  "name": "AI Session Linker",
  "version": "1.0",
  "permissions": ["cookies"],
  "host_permissions": ["https://*.linkedin.com/*", "https://*.instagram.com/*"],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*", "https://automate-platform.appkit.site"]
  },
  "background": {
    "service_worker": "background.js"
  }
}